<header
  class="fixed top-0 left-0 w-full z-50 transition-all duration-300"
  id="main-header"
>
  <input type="checkbox" id="mobile-menu-toggle" class="peer hidden" />
  <nav
    class="container mx-auto px-6 py-4 transition-all duration-300 bg-transparent"
    id="main-nav"
  >
    <div class="flex items-center justify-between">
      <a
        href="#"
        class="font-serif text-2xl font-bold tracking-wider interactive-hover text-white"
        id="logo-link"
        >Dr. Valeria Urhan</a
      >
      <div class="hidden md:flex items-center space-x-8" id="nav-links">
        <a
          href="#about"
          class="hover:text-[#B99767] transition-colors interactive-hover text-white"
          >Quienes somos</a
        >
        <a
          href="#services"
          class="hover:text-[#B99767] transition-colors interactive-hover text-white"
          >Servicios</a
        >
        <a
          href="#results"
          class="hover:text-[#B99767] transition-colors interactive-hover text-white"
          >Resultados</a
        >
        <a
          href="#contact"
          class="hover:text-[#B99767] transition-colors interactive-hover text-white"
          >Contacto</a
        >
      </div>
      <a
        href="#contact"
        class="hidden md:inline-block btn btn-primary bg-white/20 text-white"
        id="book-now-btn"
        >Book Now</a
      >
      <label
        for="mobile-menu-toggle"
        class="md:hidden text-white interactive-hover cursor-pointer"
        id="mobile-menu-label"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </label>
    </div>
  </nav>
  <!-- Mobile Menu -->
  <div
    class="hidden bg-transparent peer-checked:block md:hidden"
    id="mobile-menu"
  >
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      <a
        href="#about"
        class=" hover:text-[#B99767] block px-3 py-2 rounded-md text-base font-medium"
        >Quienes somos</a
      >
      <a
        href="#services"
        class=" hover:text-[#B99767] block px-3 py-2 rounded-md text-base font-medium"
        >Servicios</a
      >
      <a
        href="#results"
        class=" hover:text-[#B99767] block px-3 py-2 rounded-md text-base font-medium"
        >Resultados</a
      >
      <a
        href="#contact"
        class=" hover:text-[#B99767] block px-3 py-2 rounded-md text-base font-medium"
        >Contacto</a
      >
    </div>
  </div>
  <script>
    // This script is only for the scroll effect, not the menu toggle.
    const nav = document.getElementById("main-nav");
    const mobileMenu = document.getElementById("mobile-menu");
    const logo = document.getElementById("logo-link");
    const navLinks = document.querySelectorAll("#nav-links a");
    const bookNowBtn = document.getElementById("book-now-btn");
    const mobileMenuLabel = document.getElementById("mobile-menu-label");

    window.addEventListener("scroll", () => {
      const isScrolled = window.pageYOffset > 50;
      console.log(isScrolled)
      const navAndMenuClasses = ["bg-white/90", "backdrop-blur-sm", "shadow-md", "rounded-b-lg"];

      [nav, mobileMenu].forEach(el => {
        el?.classList.toggle("bg-transparent", !isScrolled);
        navAndMenuClasses.forEach(c => el?.classList.toggle(c, isScrolled));
      });

      if(!logo || !bookNowBtn || !mobileMenuLabel || !navLinks) return;

      logo.classList.toggle("text-white", !isScrolled);
      logo.classList.toggle("text-gray-800", isScrolled);
      
      bookNowBtn.classList.toggle("!bg-[#B99767]", isScrolled);
      bookNowBtn.classList.toggle("!text-white", isScrolled);

      mobileMenuLabel.classList.toggle("text-white", !isScrolled);
      mobileMenuLabel.classList.toggle("text-gray-800", isScrolled);

      navLinks.forEach((link) => {
        link.classList.toggle("text-white", !isScrolled);
        link.classList.toggle("text-gray-600", isScrolled);
      });
    });
  </script>
</header>
