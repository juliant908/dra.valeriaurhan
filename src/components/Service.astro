---
import {Image} from "astro:assets";

const {serviceTitle, serviceSubtitle, iconSrc, iconAlt} = Astro.props;
---

<div>
  <article>
    <div class="flex flex-col gap-12 text-center text-[var(--dark-gray)]">
      <div class="icon">
        <Image src={iconSrc} alt={iconAlt} class="w-full h-full object-cover" />
      </div>
      <h4><strong>{serviceTitle}</strong></h4>
      <p class="text-nowrap">{serviceSubtitle}</p>
    </div>
  </article>
</div>

<style>
  .icon {
    width: 100px;
    height: 100px;
    background-color: var(--bg-icon);
    border-radius: 50%;
    margin-inline: auto;
  }
</style>
